{
    "name": "sammakescode/klaviyo-api",
    "description": "A Klaviyo library for PHP written by a normal person",
    "keywords": ["klaviyo", "event", "guzzle", "wrapper"],
    "homepage": "https://github.com/sammakescode/klaviyo-api",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "SamMakesCode\\KlaviyoApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SamMakesCode\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Sam Littler",
            "email": "samlittler57@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "guzzlehttp/guzzle": "^7.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.2"
    },
    "scripts": {
        "test": [
            "@php ./vendor/bin/phpunit --testdox --color"
        ]
    }
}
